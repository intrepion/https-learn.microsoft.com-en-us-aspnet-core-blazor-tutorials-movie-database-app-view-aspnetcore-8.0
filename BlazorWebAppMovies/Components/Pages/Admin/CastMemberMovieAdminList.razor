@page "/admin/cast-member-movie-list"
@rendermode InteractiveServer
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject ICastMemberMovieAdminService CastMemberMovieAdminService
@attribute [StreamRendering]

<PageTitle>Cast Member Movie List</PageTitle>

<section>
  <h1>Cast Member Movie List</h1>
  <article>
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Id</th>

          <th scope="col">Cast Member</th>
              <th scope="col">Movie</th>
              @* ListHeaderCodePlaceholder *@

          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        @if (castMemberMovies == null)
        {
          <tr>
            <td colspan="4">Loading...</td>
            @* LoadingCountCodePlaceholder *@
          </tr>
        }
        else if (castMemberMovies.Count == 0)
        {
          <tr>
            @* ZeroCountCodePlaceholder *@
          </tr>
        }
        else
        {
          @foreach (var castMemberMovie in castMemberMovies)
          {
            <tr>
              <td>@castMemberMovie.Id</td>

              <td>@castMemberMovie.CastMember?.Name1 @castMemberMovie.CastMember?.Name2</td>
              <td>@castMemberMovie.Movie?.Title</td>
              @* ListItemCodePlaceholder *@

              <td>
                <a href="@("/admin/cast-member-movie-edit/" + castMemberMovie.Id)">Edit</a>
              </td>
            </tr>
          }
        }
      </tbody>
    </table>
    <a href="/admin/cast-member-movie-edit">Create</a>
  </article>
</section>

@code {
  List<CastMemberMovie>? castMemberMovies = null;

  protected override async Task OnInitializedAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    castMemberMovies = await CastMemberMovieAdminService.GetAllAsync(userName);
  }
}
