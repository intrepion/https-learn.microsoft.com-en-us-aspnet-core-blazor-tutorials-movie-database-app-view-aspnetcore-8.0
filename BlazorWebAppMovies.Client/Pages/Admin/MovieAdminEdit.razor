@page "/admin/movie-edit"
@page "/admin/movie-edit/{id:guid}"
@rendermode InteractiveAuto
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject NavigationManager NavigationManager
@inject IMovieAdminService MovieAdminService

@* InjectionCodePlaceholder *@
@* @inject IToDoListAdminService ToDoListAdminService *@

  @if (Id.Equals(Guid.Empty))
  {
    <PageTitle>Movie Creation</PageTitle>
  }
  else
  {
    <PageTitle>Movie Modification</PageTitle>
  }

<section>
  @if (Id.Equals(Guid.Empty))
  {
    <h1>Movie Creation</h1>
  }
  else
  {
    <h1>Movie Modification</h1>
  }
  <article>
    <EditForm class="container" Model="movieAdminEditModel" OnSubmit="HandleSubmit">

      @* EditRowCodePlaceholder *@

      <div class="row">
        <div class="col">
          @if (!Id.Equals(Guid.Empty))
          {
            <button @onclick="Remove" type="button" class="btn btn-danger">Remove</button>
          }
        </div>
        <div class="col">
          <a href="/admin/movie-list">Cancel</a>
          @if (Id.Equals(Guid.Empty))
          {
            <button type="submit" class="btn btn-primary">Create</button>
          }
          else
          {
            <button type="submit" class="btn btn-primary">Modify</button>
          }
         </div>
      </div>
    </EditForm>
  </article>
</section>

@code {
  [Parameter]
  public Guid Id { get; set; }
  MovieAdminEditModel movieAdminEditModel { get; set; } = new MovieAdminEditModel();

  @* ListDeclarationCodePlaceholder *@

  protected override async Task OnInitializedAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    await base.OnInitializedAsync();

    @* OnInitializedCodePlaceholder *@
  }

  protected override async Task OnParametersSetAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    var databaseMovieAdminDto = await MovieAdminService.GetByIdAsync(userName, Id);

    if (databaseMovieAdminDto == null)
    {
      movieAdminEditModel = new MovieAdminEditModel();
    }
    else
    {
      movieAdminEditModel = MovieAdminEditModel.FromMovieAdminDto(databaseMovieAdminDto);
    }
  }

  async Task HandleSubmit()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    @* RequiredPropertyPlaceholder *@

    @* if (string.IsNullOrWhiteSpace(movieAdminEditModel.Name))
    {
      return;
    } *@

    var movieAdminDto = MovieAdminEditModel.ToMovieAdminDto(movieAdminEditModel);
    movieAdminDto.ApplicationUserName = userName;

    if (Id.Equals(Guid.Empty))
    {
      var newMovieAdminDto = await MovieAdminService.AddAsync(movieAdminDto);

      if (newMovieAdminDto == null)
      {
        return;
      }

      NavigationManager.NavigateTo($"/admin/movie-edit/{newMovieAdminDto.Id}");
    }
    else
    {
      await MovieAdminService.EditAsync(movieAdminDto);
    }
  }

  async Task Remove()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name!;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    await MovieAdminService.DeleteAsync(userName, Id);
    NavigationManager.NavigateTo($"/admin/movie-list");
  }

  @* OnChangeCodePlaceholder *@
}
